@model List<FoodMVC.Models.CartItem>

<h2>Your Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Quantity</td>
                <td>@(item.Price * item.Quantity)</td>
                <td>
                    <a href="@Url.Action("RemoveFromCart", "Cart", new { menuItemId = item.MenuItemId })">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Total: @Model.Sum(x => x.Price * x.Quantity).ToString("C")</h3>
